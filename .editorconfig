root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
tab_width = 1

[*.js]
indent_size = 1
tab_width = 1

[*.html]
indent_size = 1
tab_width = 1

[*.css]
indent_size = 1
tab_width = 1

[*.conf]
indent_size = 2
indent_style = tab

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.sh]
indent_size = 1
tab_width = 1
